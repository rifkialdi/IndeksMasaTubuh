<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/idedt_berat"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/idedt_tinggi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/idedt_berat"
        app:layout_constraintStart_toStartOf="@+id/idedt_berat"
        app:layout_constraintTop_toBottomOf="@+id/idedt_berat"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/idbtn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim imt"
        app:layout_constraintEnd_toEndOf="@+id/idedt_tinggi"
        app:layout_constraintStart_toStartOf="@+id/idedt_tinggi"
        app:layout_constraintTop_toBottomOf="@+id/idedt_tinggi"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/idtv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idbtn_submit" />



</androidx.constraintlayout.widget.ConstraintLayout>